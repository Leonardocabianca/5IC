<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rikkardo.quiz.FirstQuiz">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Horse is ___ than turtle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/q1_01"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg_01">

            <RadioButton
                android:text="Faster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0101"
                android:layout_weight="1"
                android:textAlignment="viewStart" />

            <RadioButton
                android:text="Slower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0102"
                android:layout_weight="1"
                android:fontFamily="sans-serif" />
        </RadioGroup>

        <TextView
            android:text="Giraffe is ___ than ippo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/q1_02"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg_02">

            <RadioButton
                android:text="Shorter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0201"
                android:layout_weight="1" />

            <RadioButton
                android:text="Taller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0202"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="Moon is ___ than Sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/q1_03"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg_03">

            <RadioButton
                android:text="Bigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0301"
                android:layout_weight="1" />

            <RadioButton
                android:text="Smaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0302"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="Monkey is ___  than insects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:text="Smarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0401"
                android:layout_weight="1" />

            <RadioButton
                android:text="More stupid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0402"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="You ___ this quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:text="Liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0501"
                android:layout_weight="1" />

            <RadioButton
                android:text="Unliked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c0502"
                android:layout_weight="1" />
        </RadioGroup>

        <Button
            android:text="Done!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finish" />
    </LinearLayout>
</RelativeLayout>
