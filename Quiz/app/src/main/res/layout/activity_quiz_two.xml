<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorWallpaper"
    android:paddingTop="20dp">


    <TextView
        android:text="Domanda "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionCount2"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/separator"
        android:layout_alignEnd="@+id/separator"
        android:gravity="center_horizontal"
        android:textSize="30sp" />

    <View android:id="@+id/separator"
        android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:id="@+id/cardView">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quizTypeView2"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quizQuestionView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>

    </android.support.v7.widget.CardView>

    <Button
        android:text="Vero"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/buttonTrue2"
        android:elevation="4dp"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonBackgroundTrue"
        android:onClick="buttonOnClick"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/cardView"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignStart="@+id/cardView" />

    <Button
        android:text="Falso"
        android:layout_width="wrap_content"
        android:layout_below="@+id/buttonTrue2"
        android:layout_alignStart="@+id/buttonTrue2"
        android:layout_alignEnd="@+id/buttonTrue2"
        android:id="@+id/buttonFalse2"
        android:layout_height="70dp"
        android:elevation="4dp"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonBackgroundFalse"
        android:onClick="buttonOnClick"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="0"
        android:layout_marginBottom="81dp"
        android:layout_above="@+id/buttonFalse2"
        android:layout_alignStart="@+id/buttonTrue2"
        android:layout_alignEnd="@+id/buttonTrue2" />


</RelativeLayout>