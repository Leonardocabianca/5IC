<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="26dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:background="@color/mainactbg"
    tools:context="com.zonelli.mattia.quiz.ActivityTwo">

    <TextView android:id="@+id/textView2"
        android:text="@string/quiz1Quest1"
        android:textSize="20dp"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioGroup android:id="@+id/rgroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RadioButton android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueanswer"
            android:textSize="16dp"/>

        <RadioButton android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseanswer"
            android:textSize="16dp"/>
    </RadioGroup>

    <TextView android:id="@+id/textView3"
        android:text="@string/quiz1Quest2"
        android:textSize="20dp"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup1"
        android:layout_marginTop="15dp" />
    <RadioGroup android:id="@+id/rgroup2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView3">

        <RadioButton android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueanswer"
            android:textSize="16dp"/>

        <RadioButton android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseanswer"
            android:textSize="16dp"/>
    </RadioGroup>

    <TextView android:id="@+id/textView4"
        android:text="@string/quiz1Quest3"
        android:textSize="20dp"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup2"
        android:layout_marginTop="15dp" />
    <RadioGroup android:id="@+id/rgroup3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView4">

        <RadioButton android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueanswer"
            android:textSize="16dp"/>

        <RadioButton android:id="@+id/radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseanswer"
            android:textSize="16dp"/>
    </RadioGroup>

    <TextView android:id="@+id/textView5"
        android:text="@string/quiz1Quest4"
        android:textSize="20dp"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup3"
        android:layout_marginTop="15dp" />
    <RadioGroup android:id="@+id/rgroup4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView5">

        <RadioButton android:id="@+id/radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueanswer"
            android:textSize="16dp"/>

        <RadioButton android:id="@+id/radio8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseanswer"
            android:textSize="16dp"/>
    </RadioGroup>

    <Button
        android:text="@string/checkB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttonscolor"
        android:textSize="16dp"
        android:id="@+id/button"
        android:layout_below="@+id/rgroup4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
