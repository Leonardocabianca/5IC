<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swapnil.thequiz.MainActivity">

    <TextView
        android:text="@string/inserisciUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="@dimen/text_size"
        android:textColor="@color/textColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp" />


    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTxt"
        android:hint="@string/userName_hint"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />


    <Button
        android:text="Take Quiz 1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button01"
        android:elevation="20dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorHighlight="@color/textColor"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/editTxt"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Take Quiz 2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button02"
        android:elevation="20dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorHighlight="@color/textColor"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/button01"
        android:layout_alignBottom="@+id/button01"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
