<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leonardo.calculator.MainActivity"
    android:background="@color/sfondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            android:layout_margin="10dp"
            android:background="@drawable/buttonnormal"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:layout_margin="10dp"
            android:background="@drawable/buttonnormal"
            android:layout_weight="0.44"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textSize="36sp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

                <Button
                    android:id="@+id/AC"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="AC"
                    android:background="@drawable/buttonac"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:onClick="clear" />

                <Button
                    android:id="@+id/C"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="C"
                    android:background="@drawable/buttonc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/sette"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/otto"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/nove"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/Moltiplication"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="*"
                    android:background="@drawable/buttonoperazioni"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:onClick="onClick1" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/quattro"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/cinque"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textAllCaps="true"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/sei"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/meno"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:background="@drawable/buttonoperazioni"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="36sp"
                    android:onClick="onClick1" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/uno"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/due"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />
                <Button
                    android:id="@+id/tre"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/Division"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="/"
                    android:background="@drawable/buttonoperazioni"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:onClick="onClick1" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/zero"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:background="@drawable/buttonnormal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:onClick="onClick1" />

                <Button
                    android:id="@+id/uguale"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="="
                    android:background="@drawable/buttonugu"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:onClick="result" />

                <Button
                    android:id="@+id/piu"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:background="@drawable/buttonoperazioni"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:onClick="onClick1" />

            </TableRow>

        </TableLayout>





    </LinearLayout>


</RelativeLayout>
