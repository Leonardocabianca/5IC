<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/sfondo"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marco.example.utente.calculator.MainActivity">

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_alignTop="@+id/Virgola"
        android:layout_toEndOf="@+id/Virgola"
        android:id="@+id/Zero"
        android:onClick="onClick1"/>

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background2"
        android:layout_alignTop="@+id/Zero"
        android:layout_toEndOf="@+id/Zero"
        android:id="@+id/Uguale"
        android:onClick="onClick"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundOperazioni"
        android:layout_alignTop="@+id/Uguale"
        android:layout_toEndOf="@+id/Uguale"
        android:id="@+id/Somma"
        android:onClick="onClick1"/>

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_above="@+id/Virgola"
        android:layout_alignParentStart="true"
        android:id="@+id/uno"
        android:onClick="onClick1"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_alignTop="@+id/uno"
        android:layout_toEndOf="@+id/Virgola"
        android:id="@+id/due"
        android:onClick="onClick1"/>

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_alignTop="@+id/due"
        android:layout_toEndOf="@+id/Zero"
        android:id="@+id/tre"
        android:onClick="onClick1"/>

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundOperazioni"
        android:layout_alignTop="@+id/tre"
        android:layout_toEndOf="@+id/Uguale"
        android:id="@+id/sottrazione"
        android:onClick="onClick1"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_above="@+id/uno"
        android:layout_alignParentStart="true"
        android:id="@+id/quattro"
        android:onClick="onClick1"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_above="@+id/uno"
        android:layout_toStartOf="@+id/tre"
        android:id="@+id/cinque"
        android:onClick="onClick1"/>

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundOperazioni"
        android:layout_alignTop="@+id/sei"
        android:layout_toEndOf="@+id/tre"
        android:id="@+id/moltiplicazione"
        android:onClick="onClick1"/>

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_above="@+id/quattro"
        android:layout_alignParentStart="true"
        android:id="@+id/sette"
        android:textColor="@color/Testo"
        android:onClick="onClick1"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sette"
        android:layout_toEndOf="@+id/quattro"
        android:id="@+id/otto"
        android:onClick="onClick1"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:layout_alignTop="@+id/otto"
        android:layout_toEndOf="@+id/cinque"
        android:id="@+id/nove"
        android:onClick="onClick1"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nove"
        android:background="@color/backgroundOperazioni"
        android:layout_toEndOf="@+id/sei"
        android:id="@+id/divisione"
        android:onClick="onClick1"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/otto"
        android:background="@color/background2"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/canc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="clear"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Testo"
        android:background="@color/background"
        android:id="@+id/sei"
        android:onClick="onClick1"
        android:layout_alignBaseline="@+id/cinque"
        android:layout_alignBottom="@+id/cinque"
        android:layout_toEndOf="@+id/due" />

    <Button
        android:text=","
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Virgola"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Inserisci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inserisci"
        android:textSize="30dp"
        android:textColor="@color/backgroundOperazioni"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="0"
        android:layout_below="@+id/inserisci"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Risultato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/risultato"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/backgroundOperazioni"
        android:layout_below="@+id/display"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@+id/display"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
