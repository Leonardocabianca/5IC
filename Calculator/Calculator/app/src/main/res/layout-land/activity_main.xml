<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.calculator.MainActivity">

    <Button
        android:id="@+id/two"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zero"
        android:layout_alignStart="@+id/five"
        android:background="@color/digitColor"
        android:text="@string/two_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nine"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eight"
        android:layout_alignTop="@+id/seven"
        android:layout_toEndOf="@+id/eight"
        android:background="@color/digitColor"
        android:text="@string/nine_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seven"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/four"
        android:layout_alignStart="@+id/four"
        android:background="@color/digitColor"
        android:text="@string/seven_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/per"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slash"
        android:layout_toEndOf="@+id/neper"
        android:background="@color/operatorColor"
        android:text="@string/per_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/slash"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/neper"
        android:layout_toEndOf="@+id/neper"
        android:background="@color/operatorColor"
        android:text="@string/over_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/one"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pi"
        android:layout_toStartOf="@+id/two"
        android:background="@color/digitColor"
        android:text="@string/one_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/plus"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minus"
        android:layout_alignStart="@+id/minus"
        android:background="@color/operatorColor"
        android:text="@string/plus_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/one"
        android:layout_below="@+id/eight"
        android:background="@color/digitColor"
        android:text="@string/four_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eight"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/six"
        android:layout_toEndOf="@+id/seven"
        android:background="@color/digitColor"
        android:fontFamily="sans-serif"
        android:text="@string/eight_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/minus"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/per"
        android:layout_alignStart="@+id/per"
        android:background="@color/operatorColor"
        android:text="@string/minus_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zero"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/pi"
        android:background="@color/digitColor"
        android:text="@string/zero_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/three"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:background="@color/digitColor"
        android:text="@string/three_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/six"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/two"
        android:layout_toStartOf="@+id/per"
        android:background="@color/digitColor"
        android:text="@string/six_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/display"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plus"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/screen"
        android:ems="10"
        android:gravity="end"
        android:inputType="none"
        android:maxLines="2"
        android:selectAllOnFocus="false"
        android:textColor="@color/text"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textIsSelectable="true"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/neper"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/two"
        android:background="@color/digitColor"
        android:text="@string/euler_symbol"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/point"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equals"
        android:layout_toEndOf="@+id/per"
        android:background="@color/operatorColor"
        android:text="@string/point_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/equals"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/slash"
        android:background="@color/operatorColor"
        android:text="@string/equals_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sqrt"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minus"
        android:layout_alignBottom="@+id/minus"
        android:layout_toEndOf="@+id/per"
        android:background="@color/operatorColor"
        android:text="@string/sqrt_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/exp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nine"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toEndOf="@+id/plus"
        android:background="@color/operatorColor"
        android:text="@string/exp_symbol"
        android:textColor="@color/digitColor"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/five"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/four"
        android:layout_alignBottom="@+id/four"
        android:layout_alignParentStart="true"
        android:layout_marginStart="131dp"
        android:background="@color/digitColor"
        android:text="@string/five_digit"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pi"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/one"
        android:background="@color/digitColor"
        android:text="@string/pi_symbol"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CE"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="@string/CE"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        tools:ignore="NewApi,RelativeOverlap"
        android:layout_below="@+id/delete"
        android:layout_toEndOf="@+id/point" />

    <Button
        android:id="@+id/delete"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="@string/delete"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:text="@string/delete"
        android:layout_alignBaseline="@+id/exp"
        android:layout_alignBottom="@+id/exp"
        android:layout_toEndOf="@+id/sqrt" />


</RelativeLayout>
