<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonardo.sportquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/barba"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Player_NBA">
        <intent-filter>

            <action android:name="com.example.leonardo.sportquiz.Player_NBA"/>
            <category android:name="android.intent.category.DEFAULT"/>
        </intent-filter>

        </activity>
        <activity android:name=".Team_NBA">
            <intent-filter>

                <action android:name="com.example.leonardo.sportquiz.Team_NBA"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>


        </activity>
    </application>

</manifest>